
.payPassword{
	width: 100%;
	height: 300rpx;
	margin: 0 auto;
	margin-top: 200rpx;
	position: relative;
}
.password input{
	width: 60%;
	height: 100rpx;
	font-size: 48rpx;
	background-color: #eaeaea;
	position: absolute;
	left: 50%;
	top:20%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
}
.payButton{
	width: 280rpx;
	height: 50rpx;
	position: absolute;
	left: 50%;
	top:50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
}

